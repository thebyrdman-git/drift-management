{
  // Cursor IDE - Opinionated Standards
  // Generated by Ansible - DO NOT EDIT MANUALLY
  // Source: drift-management/ansible/roles/cursor_ide_manager
  
  // Editor Settings
  "editor.fontFamily": "{{ editor_standards.font_family }}",
  "editor.fontSize": {{ editor_standards.font_size }},
  "editor.tabSize": {{ editor_standards.tab_size }},
  "editor.insertSpaces": {{ editor_standards.insert_spaces | lower }},
  "editor.trimAutoWhitespace": {{ editor_standards.trim_trailing_whitespace | lower }},
  "files.insertFinalNewline": {{ editor_standards.insert_final_newline | lower }},
  "files.trimTrailingWhitespace": {{ editor_standards.trim_trailing_whitespace | lower }},
  "editor.formatOnSave": {{ editor_standards.format_on_save | lower }},
  "editor.formatOnPaste": {{ editor_standards.format_on_paste | lower }},
  "files.autoSave": "{{ editor_standards.auto_save }}",
  
  // AI Settings
  "cursor.aiModel": "{{ cursor_default_model }}",
  "cursor.fallbackModel": "{{ cursor_fallback_model }}",
  
  // Python Settings
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  
  // Ansible Settings
  "ansible.python.interpreterPath": "/usr/bin/python3",
  "files.associations": {
    "*.yml": "ansible",
    "*.yaml": "ansible"
  },
  
  // Git Settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  
  // Terminal Settings
  "terminal.integrated.fontFamily": "{{ editor_standards.font_family }}",
  "terminal.integrated.fontSize": {{ editor_standards.font_size }},
  
  // Workspace Settings
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Default Dark Modern",
  
  // Consistency standards
  "files.eol": "\n",
  "files.encoding": "utf8",
  "editor.detectIndentation": false,
  "editor.renderWhitespace": "boundary"
}

